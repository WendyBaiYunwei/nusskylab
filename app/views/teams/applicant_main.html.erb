<% content_for :main_content do %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="text-center"> Applicants Selection <%= cohort %></h3>
    </div>
    <div class="panel-body">
        <% if Time.now < peer_eval_ddl %>
          <p> Selection stage not reached yet.</p>
        <% else %>
          <a href="<%= upload_csv_teams_path %>" class="btn btn-default">Import applicants rank</a>
          <p>
          <%= render 'applicant_table', locals: { teams: Team.where("application_status > 'c'").order(:avg_rank)} %>
          </p>
        <% end %>
        <% if Time.now > result_release_date %>
          <a href="<%= purge_and_open_users_path %>" class="btn btn-danger">Delete Unsuccessful Applicants</a>
        <% end %>
    </div>
  </div>
<% end %>
